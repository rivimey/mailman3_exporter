description "mailman3_exporter"
start on runlevel [2345]
stop on runlevel [06]

env MAILMAN3_EXPORTER={{ mailman3_exporter_bin_path }}/mailman3_exporter
env USER={{ mailman3_exporter_user }}
env GROUP={{ mailman3_exporter_group }}
env DEFAULTS=/etc/default/mailman3_exporter
env RUNDIR=/var/run/mailman3_exporter
env PID_FILE=/var/run/mailman3_exporter/mailman3_exporter.pid

pre-start script
  [ -e $DEFAULTS ] && . $DEFAULTS

  mkdir -p $RUNDIR           || true
  chmod 0750 $RUNDIR         || true
  chown $USER:$GROUP $RUNDIR || true
end script

script
  # read settings from "/etc/default/mailman3_exporter", if available.
  [ -e $DEFAULTS ] && . $DEFAULTS

  exec start-stop-daemon -c $USER -g $GROUP -p $PID_FILE -x $MAILMAN3_EXPORTER -S -- \
    -l {{ mailman3_exporter_listen_address }} \
    -u \"{{ mailman3_api_user }}\" -p \"{{ mailman3_api_pass }}\" \
    {{ mailman3_exporter_additional_cli_args }}
end script

respawn
respawn limit 10 10
kill timeout 10
